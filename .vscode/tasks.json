{
    "tasks": [
        {
            "label":"Build PIO header",
             "type":"process",
             "command":".vscode/pioasm",
             "args":[
                "${fileDirname}/${fileBasenameNoExtension}.pio",
                "${fileDirname}/${fileBasenameNoExtension}.pio.h"
             ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I../piolib/include",
                "-I../Gpio5",            
                "${file}",
                "../Gpio5/Gpio5.c",
                "../piolib/piolib.c",
                "../piolib/pio_rp1.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                 "-lgpiod",
                 "-lpthread"                 
                 
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "label": "run C",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension} ",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}